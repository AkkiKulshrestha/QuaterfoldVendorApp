<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp8"
    android:background="@drawable/border_dark"
    android:padding="@dimen/dp16">

    <TextView
        android:id="@+id/brand"
        style="@style/TextView.LightFont.BoldStyle.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp8"
        android:layout_marginTop="@dimen/dp8"
        android:textColor="@color/black_main"
        android:textSize="@dimen/sp14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Brand : Activa" />

    <TextView
        android:id="@+id/assignment_id"
        style="@style/TextView.LightFont.BoldStyle.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp8"
        android:layout_marginTop="@dimen/dp8"
        android:textColor="@color/black_main"
        android:textSize="@dimen/sp14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/brand"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Assignment Id : ASS-1213" />

    <TextView
        android:id="@+id/assignment_dealer_name"
        style="@style/TextView.LightFont.BoldStyle.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp8"
        android:layout_marginTop="@dimen/dp8"
        android:ellipsize="none"
        android:singleLine="false"
        android:textColor="@color/black_main"
        android:textSize="@dimen/sp14"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/assignment_id"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Dealer Name: XYZ Enterprises" />

    <TextView
        android:id="@+id/assignment_location"
        style="@style/TextView.LightFont.BoldStyle.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp8"
        android:layout_marginTop="@dimen/dp8"
        android:ellipsize="none"
        android:singleLine="false"
        android:textColor="@color/black_main"
        android:textSize="@dimen/sp14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/assignment_dealer_name"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Address: 503, Balaji Hill View, Near Vinay Nagar, Mira Road East, Thane, Maharashtra" />

    <TextView
        android:id="@+id/no_of_walls"
        style="@style/TextView.LightFont.BoldStyle.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp8"
        android:layout_marginTop="@dimen/dp8"
        android:textColor="@color/black_main"
        android:textSize="@dimen/sp14"
        android:singleLine="false"
        android:lineSpacingMultiplier="1.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/assignment_location"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="No of Wales: 10" />

    <Button
        android:id="@+id/execute_cta"
        style="@style/StyleMaterialOutlineButtonNewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/execute"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/assignment_location" />

</androidx.constraintlayout.widget.ConstraintLayout>